<%= form_with model: [:admin, order.user, order] do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% @order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :customer_details %><br>
    <%= form.text_field :customer_details %><br>

    <%= form.label :delivery_details %><br>
    <%= form.text_field :delivery_details %><br>

    <%= form.label :order_status %><br>
    <%= form.select :status, Order::STATUSES %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= link_to 'Back to Orders', admin_orders_path %>
<% end %>
